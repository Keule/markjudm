<h1>Listing collages</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collages.each do |collage| %>
      <tr>
        <td><%= collage.product %></td>
        <td><%= collage.name %></td>
        <td><%= link_to 'Show', collage %></td>
        <td><%= link_to 'Edit', edit_collage_path(collage) %></td>
        <td><%= link_to 'Destroy', collage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Collage', new_collage_path %>
